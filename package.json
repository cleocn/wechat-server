{
  "name": "wechat-server",
  "version": "0.1.2",
  "description": "Wechat api proxy and access token manager microservice",
  "scripts": {
    "compile": "babel --plugins \"transform-runtime\" src --out-dir ./dist",
    "start": "node ./dist/index.js",
    "dev": "nodemon --exec babel-node ./dist/index.js",
    "test": "_mocha --compilers js:babel-core/register tests/**/*.js",
    "test-watch": "npm run test -- --watch"
  },
  "keywords": [
    "wechat",
    "server",
    "access_token",
    "token",
    "中控服务器",
    "微信公众平台"
  ],
  "author": "feit",
  "license": "MIT",
  "dependencies": {
    "babel-runtime": "^6.5.0",
    "dotenv": "^2.0.0",
    "micro": "^1.0.3",
    "raven": "^2.2.1",
    "request-promise": "^2.0.0",
    "wechat-token": "^0.5.0"
  },
  "devDependencies": {
    "ava": "^0.11.0",
    "babel-cli": "6.x.x",
    "babel-core": "6.x.x",
    "babel-eslint": "^4.1.8",
    "babel-plugin-transform-runtime": "6.x.x",
    "babel-polyfill": "6.x.x",
    "babel-preset-es2015": "6.x.x",
    "babel-preset-stage-2": "6.x.x",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^5.0.0",
    "mocha": "^2.4.5",
    "nock": "^7.0.2",
    "should": "^8.2.2"
  }
}
